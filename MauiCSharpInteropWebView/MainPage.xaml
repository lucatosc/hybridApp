<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:hwv="clr-namespace:HybridWebView;assembly=HybridWebView"
             x:Class="MauiCSharpInteropWebView.MainPage">

    <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,*">
        <Label
                Text="Hello, World!"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center" />

        <Button Grid.Column="1"
                x:Name="CounterBtn"
                Text="Click me"
                SemanticProperties.Hint="Counts the number of times you click"
                Clicked="OnCounterClicked"
                HorizontalOptions="Center" />

        <hwv:HybridWebView Grid.Row="1" Grid.ColumnSpan="2" x:Name="webView" HybridAssetRoot="hybrid_root" MainFile="hybrid_app.html" RawMessageReceived="webView_MessageReceived" />
    </Grid>

</ContentPage>
